class Solution {
    public int xorFromLtoR(int L, int R) {
        return xorUpto(R) ^ xorUpto(L - 1);
    }

    private int xorUpto(int n) {
        if (n % 4 == 0) return n;
        if (n % 4 == 1) return 1;
        if (n % 4 == 2) return n + 1;
        return 0; // n % 4 == 3
    }
}
