import java.util.*;

class Solution {
    public List<Integer> allDivisors(int n) {
        List<Integer> res = new ArrayList<>();
        for (int i = 1; i * i <= n; i++) {
            if (n % i == 0) {
                res.add(i);
                if (i != n / i) res.add(n / i); // Avoid duplicates for perfect squares
            }
        }
        Collections.sort(res);
        return res;
    }
}
