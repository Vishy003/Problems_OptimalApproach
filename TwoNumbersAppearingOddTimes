class Solution {
    public int[] findTwoOddNumbers(int[] nums) {
        int xor = 0;
        for (int num : nums) xor ^= num;

        int diffBit = xor & -xor; // Rightmost set bit

        int x = 0, y = 0;
        for (int num : nums) {
            if ((num & diffBit) == 0)
                x ^= num;
            else
                y ^= num;
        }
        return new int[]{x, y};
    }
}
