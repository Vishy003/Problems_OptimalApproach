class Node {
    int data;
    Node prev, next;

    Node(int data) {
        this.data = data;
    }
}

class Solution {
    public static Node deleteAllOccurrences(Node head, int key) {
        Node curr = head;

        while (curr != null) {
            if (curr.data == key) {
                if (curr.prev != null) curr.prev.next = curr.next;
                else head = curr.next; // deleting head

                if (curr.next != null) curr.next.prev = curr.prev;
            }
            curr = curr.next;
        }

        return head;
    }
}
